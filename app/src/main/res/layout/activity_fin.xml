<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".fin"
    android:background="#009900"
    >

    <TextView
        android:text="@string/jjf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/applesText"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fsdf"
        android:id="@+id/app"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        />
    <Button
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Send"
        android:id="@+id/sendB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendOutBroadcast"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bucky"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="hey"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hel"
        android:layout_below="@+id/applesText"
        android:layout_alignRight="@+id/app"
        android:layout_alignEnd="@+id/app"
        android:layout_marginTop="62dp"
        android:inputType="none"
        android:text="@string/hu" />





</RelativeLayout>
